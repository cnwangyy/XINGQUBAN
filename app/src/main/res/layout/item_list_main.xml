<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/item_main"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_margin="6dp"
                                    card_view:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_weight="0.67">

            <TextView
                android:id="@+id/name_item_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="username"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:textColor="@color/cardview_shadow_start_color" />

            <TextView
                android:text="description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description_item_main"
                android:layout_below="@+id/name_item_main"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black" />

            <TextView
                android:text="pinglun_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/description_item_main"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="326dp"
                android:layout_marginStart="326dp"
                android:id="@+id/pinglun_datetime_item_main"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray" />

            <!--<TextView-->
                <!--android:id="@+id/price_item_main"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:text="price"-->
                <!--android:textSize="16sp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="@android:color/holo_orange_dark"/>-->
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/picture_item_main"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
