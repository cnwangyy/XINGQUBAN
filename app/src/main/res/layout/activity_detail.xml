<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.leancloud.leanstoragegettingstarted.Detail"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:weightSum="1"
        android:layout_weight="0.29">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:text="幼儿围棋班"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0.17"
                android:textSize="24sp" />

            <TextView
                android:text="适合4岁到12岁的幼儿的围棋教学，专业教师，价格便宜"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="0.32"
                android:textSize="18sp" />

            <TextView
                android:text="地址：XXXX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="0.21"
                android:textSize="16sp" />

            <TextView
                android:text="电话：112233"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="0.23"
                android:textSize="16sp" />

        </LinearLayout>

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--app:srcCompat="@drawable/bg_edittext_normal"-->
            <!--android:id="@+id/imageView2" />-->

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:text="查看位置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1" />

        <Button
            android:text="查看评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pinglun_button_detail"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
